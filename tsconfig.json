/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule" : true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true, //new
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",//changed from es2020 to esnext
    "typeRoots": [
      "node_modules/@types"
  ],
    "lib": [
      "es2018",
      "dom"
    ],
    //new
    "paths": {
        "@app/*": ["src/app/*"],
        "@environments/*": ["src/environments/*"]
    }
  }
}
